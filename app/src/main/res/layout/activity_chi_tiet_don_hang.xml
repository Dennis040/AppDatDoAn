<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- TextViews for displaying order information -->
    <TextView
        android:id="@+id/textViewMaDonHang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Mã đơn hàng"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewTrangThaiDonHang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewMaDonHang"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Trạng thái"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textViewTongTien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTrangThaiDonHang"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Tổng tiền"
        android:textSize="18sp" />

    <!-- RecyclerView to display order details -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewOrderDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTongTien"
        android:layout_marginTop="16dp" />
</RelativeLayout>