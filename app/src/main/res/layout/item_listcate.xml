<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_marginHorizontal="15dp"
    android:layout_marginBottom="10dp"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/imageview_name_item_CateSale"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/burger" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name_item_CateSale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cơm Tấm Ốp La"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/btn_update_CateSale"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/ic_edit" />

        <ImageButton
            android:id="@+id/btn_delete_CateSale"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_bin" />

    </LinearLayout>
</LinearLayout>
