<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".admin.sales.activity.StoreRegistrationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/img_back_storeregistration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/ic_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="monospace"
            android:text="Quay vá»"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">


        <ImageView
            android:id="@+id/img_storeregistration"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginBottom="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/avt_owner" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/tv_ownerName_registerstore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_button"
            android:hint="Chu cua hang"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/tv_namestore_registerstore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_button"
            android:hint="Ten Cua Hang"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/tv_nameCate_registerstore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_button"
            android:hint="Loai hinh kinh doanh"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/tv_opened_registerstore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_button"
            android:hint="Gio hoat dong"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <com.google.android.material.textfield.MaterialAutoCompleteTextView
            android:id="@+id/tv_address_registerstore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/round_button"
            android:hint="Dia chi"
            android:inputType="text"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_check_registerstore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="70dp"
            android:background="@drawable/check" />

        <ImageButton
            android:id="@+id/btn_close_registerstore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/close" />
    </LinearLayout>
</LinearLayout>