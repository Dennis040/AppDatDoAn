<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBarOverlay">true</item> <!-- Overlay ActionBar -->
        <item name="elevation">0dp</item> <!-- Remove shadow -->
    </style>

    <!-- Customize ActionBar style -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">#FFFFFF</item> <!-- Set ActionBar background to white -->
        <item name="android:textColorPrimary">#000000
        </item> <!-- Set ActionBar text color to black -->
        <item name="elevation">0dp</item> <!-- Remove shadow -->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Fullscreen theme -->
    <style name="FullscreenTheme">
        <item name="fullscreenBackgroundColor">@color/black_overlay</item>
        <item name="fullscreenTextColor">@color/white</item>
    </style>

    <style name="Widget.Theme.Grab_Demo.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

</resources>
